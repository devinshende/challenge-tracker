<!DOCTYPE html>
<html>
<head>
	<title>Ninja Challenge Tracker</title>
	<!-- <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='styles/landing_page.css') }}"> -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link rel="shortcut icon" href="{{ url_for('static', filename='favicon.ico') }}">
	<link rel="stylesheet" type="text/css" href="static/styles.css">
</head>
<body>
	<style type="text/css">
	* {
		font-family: "Raleway";
	}

	#error {
		background: #e86f6f;
		font-size: 20px;
		padding: 10px;
		width: 80%;
		display: block;
		text-align:center;
		margin: 0 auto;
		border-radius: 20px;
		-webkit-box-shadow: 0 30px 60px 0 rgba(0,0,0,0.3);
	  	box-shadow: 0 30px 60px 0 rgba(0,0,0,0.3);
	}

	#top {
		display: block;
		padding: 30px;
		background-color: black;
		margin-bottom: 10px;
	}

	h1 {
		/*margin-left: 30%;
		margin-right: 30%;*/
		margin: 0 auto;
		text-align: center;
		width: 40%;
		color: white;
	}

	img {
		margin: 0 auto;
		height: 200px;
		display: flex;
	}

	a.btn {
		text-decoration: none;
		
		font-size: 30px;
		width: 200px;
		height: 100%;
		
		padding: 10px;
		margin: 20px auto;

		text-align: center;
		display: block;
		
		color: white;
		background-color: black;
		/*background-color: #1d8ece;*/
		border-radius: 15px;
	}
	.btn:hover {
		/*background:#27aee3;*/
		background-color: #646669;
	}


	#head-td {
		background-color: white; 
		color:black;
	}

	td {
		padding:20px;
		font-size: 25px
	}
	td:nth-of-type(even){
		background-color: #ddd;
		color:black;
	}
	td:nth-of-type(odd){
		background-color: #333;
		color: white;
	}

	.container {
		border-radius: 20px;
		-webkit-box-shadow: 0 30px 60px 0 rgba(0,0,0,0.3);
	  	box-shadow: 0 30px 60px 0 rgba(0,0,0,0.3);
	  	height: 100%;
		width: 40%;
		margin: 0 auto;
		/*background-color: lightgrey;*/
		/*align-items:center;
		justify-content: center;*/
	}

	.field {
		width: 50%;
		background-color: lightgrey;
		align-content:center;
	}

	.field input {
		align-content:right;
	}

	#table-container {
		margin: 10px auto;
	}

	.container div {
		display:block;
		margin: 0 auto;

	}

	#spacing {
		color: red;
		height:150px;
		margin-top:30px;
	}

	#above_img {
		line-height:100px;
	}

	</style>
	<div id="top"><h1>Personal Records</h1></div>
	{% with messages = get_flashed_messages() %}
			{% if messages %}
				{% for message in messages %}
				<div id="error"><strong>{{message}}</strong></div>
				{% endfor %}
				<br id="above_img">
			{% endif %}
		{% endwith %}
	<a href="/{{username}}/"><img src="https://static1.squarespace.com/static/5bafd323fd67936d5838d439/t/5bb19cf10d929713f2aa86ba/1538366719559/NNP%2BSmall%2Buse%2Bno%2Bgrad%2Bclr.jpg"></a>
	<!-- <br> -->
	<br>
	<div id='table-container'>
		{% if ch%}
			<table border="2" style="margin: 0 auto;">
			<thead>
				<tr>
					<td id="head-td">Challenge</td>
					<td id="head-td">Score</td>
					<td id="head-td">Date</td>
					<td id="head-td">Comment</td>
				</tr>
			</thead>
			<tbody>
			{% for challenge in ch.keys()%}
				<tr>
					<td>{{challenge}}</td>
					<td>{{ch[challenge][0].score}}</td>
					<td>{{ch[challenge][0].date_str}}</td>
					<td>{{ch[challenge][0].comment}}</td>
				</tr>
			{% endfor %}
			</tbody>
			</table>
		{% endif %}
	</div>
	<div class = "container">
		<form method="POST">
			<br>
			<div class="field">
				<label for="challenge">Challenge: </label>
				<select name="challenge" required>
				    {% for challenge in challenge_list%}
				    <option value="{{challenge}}" required>{{challenge}}</option>
				    {% endfor %}
				</select>
			</div>
			<div class="field">
				<label for="time">Time: </label>
				<input type="text" name="time" id="time" required="required">
			</div>
			<div class="field">
				<label for="comment">Comments: </label>
				<input type="text" name="comment" id="comment" value="{{comment}}">
			</div>
			<div class="field">
				<input type="submit" id="submit" class="" id="submit">
				<br>
			</div>
		</form>
	</div>
	<br>
</body>
</html>